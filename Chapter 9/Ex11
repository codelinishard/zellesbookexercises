#im tired of waiting for user input, I just want to finish testing them immediately
import random
def main():
    printIntro() 
    n = 5000 #int(input("input the number of rolls to simulate: "))
    h = simulateThrows(n)
    printSummary(h,n)

def printIntro():
    print("This programme simulates 5 dice rolls to esimate probability of")
    print("five of a kind.")
          
def simulateThrows(n):
    h = 0
    for i in range(n):
        d1 = random.randint(1,6)
        d2 = random.randint(1,6)
        d3 = random.randint(1,6)
        d4 = random.randint(1,6)
        d5 = random.randint(1,6)
        if d1 == d2 and d2 == d3 and d3 == d4 and d4 == d5:
            h += 1
    return h

def printSummary(h,n):
    print(f"In {n} attempts, {h} sets of 5 of a kind was rolled.")
    print(f"the esimated probability of rolling 5 of a kind is {h/n:.1%}" )

main()
